# ============================================
# SENTRY CONFIGURATION
# ============================================
# Get your DSN from https://sentry.io/settings/[org]/projects/[project]/keys/
SENTRY_DSN=https://your-key@sentry.io/your-project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_DEBUG=true

# ============================================
# LOGFLARE CONFIGURATION
# ============================================
# Get these from https://logflare.app/sources
LOGFLARE_API_KEY=your-logflare-api-key
LOGFLARE_SOURCE_TOKEN=your-source-token
LOGFLARE_API_BASE_URL=https://api.logflare.app

# ============================================
# SOURCEGRAPH CONFIGURATION
# ============================================
# Your Sourcegraph instance URL
SOURCEGRAPH_INSTANCE_URL=https://sourcegraph.com
SOURCEGRAPH_ACCESS_TOKEN=your-sourcegraph-access-token

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Supabase Database Password (get from Supabase Dashboard > Settings > Database)
SUPABASE_DB_PASSWORD=your-database-password-here

# PostgreSQL connection string (uses the password variable above)
# Note: This uses port 5432 for direct connection. For session pooler, change to port 6543 and add ?pgbouncer=true
DATABASE_URL=postgresql://postgres.your-project-ref:${SUPABASE_DB_PASSWORD}@aws-0-your-region.pooler.supabase.com:5432/postgres

# Connection Pool Settings:
# DATABASE_POOL_MIN: Minimum number of connections to keep open (even when idle)
DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX: Maximum number of simultaneous connections allowed
DATABASE_POOL_MAX=10

# Supabase configuration (if using Supabase)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_ACCESS_TOKEN=your-supabase-access-token

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
ENABLE_DEBUGGING=true
CORRELATION_ID_HEADER=x-correlation-id

# ============================================
# API CONFIGURATION
# ============================================
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# ============================================
# MONITORING & ALERTING
# ============================================
# Slack webhook for critical alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email configuration for alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL_TO=alerts@yourcompany.com

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SENTRY=true
ENABLE_LOGFLARE=true
ENABLE_DATABASE_LOGGING=true
ENABLE_API_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# SECURITY
# ============================================
# JWT Secret for API authentication
JWT_SECRET=your-super-secret-jwt-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100