# Test Environment Configuration
# Copy this file to test.env and fill in your values

# Supabase Test Instance
SUPABASE_TEST_URL=https://your-test-project.supabase.co
SUPABASE_TEST_ANON_KEY=your-test-anon-key
SUPABASE_TEST_SERVICE_ROLE_KEY=your-test-service-role-key

# Test Database (for isolated testing)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/test_db
TEST_DATABASE_POOL_SIZE=10

# GitHub Test Configuration
GITHUB_TEST_TOKEN=your-test-token
GITHUB_TEST_OWNER=test-owner
GITHUB_TEST_REPO=test-repo

# Test Execution Settings
TEST_TIMEOUT=30000          # 30 seconds default timeout
TEST_RETRY_COUNT=3          # Number of retries for flaky tests
TEST_PARALLEL_LIMIT=5       # Max parallel test execution
TEST_VERBOSE=false          # Verbose logging
TEST_COVERAGE=true          # Generate coverage reports

# Agent Testing Configuration
TEST_AGENT_MODEL=haiku      # Use fast model for tests
TEST_AGENT_TIMEOUT=60000    # 60 second timeout for agents
TEST_AGENT_CLEANUP=true     # Clean up test agents after run

# Mock Services
MOCK_EXTERNAL_APIS=true     # Mock external API calls
MOCK_SENTRY=true           # Mock Sentry error tracking
MOCK_LOGFLARE=true         # Mock Logflare logging

# Performance Testing
PERF_TEST_ITERATIONS=100   # Number of iterations for perf tests
PERF_TEST_WARMUP=10       # Warmup iterations
PERF_TEST_THRESHOLD=1000  # Max acceptable time in ms

# Debug Settings
DEBUG_SQL=false            # Log SQL queries
DEBUG_AGENTS=false         # Log agent execution
DEBUG_PARALLEL=false       # Log parallel execution details